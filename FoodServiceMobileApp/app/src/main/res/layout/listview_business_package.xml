<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvLVName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="10dp"
        android:text="TextView"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tvLVDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/tvLVName"
        android:layout_marginTop="30dp"
        android:text="TextView"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnLVReceive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvLVName"
        android:layout_below="@+id/tvLVDescription"
        android:text="Mark Received" />

    <Button
        android:id="@+id/btnLVDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tvLVDescription"
        android:layout_marginEnd="11dp"
        android:text="Delete" />
</RelativeLayout>